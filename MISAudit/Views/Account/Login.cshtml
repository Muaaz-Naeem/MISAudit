

@model MISAudit.Models.LoginViewModel
@{
    ViewBag.Title = "";
}
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form id="account" method="post">
                    <h1>Login Form</h1>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <input type="text" asp-for="Email" class="form-control" placeholder="Username" required="" />
                    </div>



                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required="" />
                    </div>
                    @*<div style="width:800px; margin:0 auto;">
                        <input type="submit" value="Log In" class="btn btn-primary">
                        </div>*@
                    <div style="text-align:center">
                        <a class="submit btn btn-lg btn-secondary" href="javascript:{}" onclick="document.getElementById('account').submit(); return false;">Log in</a>
                    </div>


                    <div class="clearfix"></div>

                    <div class="separator">
                        <a asp-area="Identity" asp-page="/Account/ForgotPassword" class=""> Lost your password? </a>

                        

                        <div class="clearfix"></div>

                    </div>
                </form>
            </section>
        </div>


    </div>

</div>
 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
