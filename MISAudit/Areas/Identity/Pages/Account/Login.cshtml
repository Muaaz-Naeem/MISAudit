@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";


}
<div class="col-sm-4">


</div>
    <div class="col-sm-3">
        
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form id="account" method="post">
                        <h1>Login Form</h1>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <input type="text" asp-for="Input.Email" class="form-control" placeholder="Username" required="" />
                        </div>



                        <div class="form-group">
                            <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" required="" />
                        </div>
                        <div class="form-group">


                            <a class=" submit" href="javascript:{}" onclick="document.getElementById('account').submit(); return false;">Log in</a>
                            <a asp-area="Identity" asp-page="/Account/ForgotPassword" class=""> Lost your password? </a>


                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a asp-area="Identity" asp-page="/Account/Register" class="to_register"> Create Account </a>

                            </p>

                            <div class="clearfix"></div>

                        </div>
                    </form>
                </section>
            </div>


        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

    }
