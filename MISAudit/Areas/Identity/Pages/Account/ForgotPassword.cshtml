@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";

}


            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        <form id="resetPass" method="post">
                            <h1>Forgot Password</h1>
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" required="" />
                            </div>

                            <div class="form-group">
                                <a class="btn btn-default submit" href="javascript:{}" onclick="document.getElementById('resetPass').submit(); return false;">Send Link</a>
                                <a asp-area="Identity" asp-page="/Account/Login" class="to_register">Login </a>
                                <a asp-area="Identity" asp-page="/Account/Register" class="to_register"> Create Account </a>
                            </div>
                        </form> 
                        </section>
</div>
            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
