@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

}




<div class="col-sm-4">


</div>

<div class="col-sm-3">
   <br/>
    <section class="login_content">
        <form asp-route-returnUrl="@Model.ReturnUrl" id="register" method="post">
            <h1>Create Account</h1>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" required="" />
            </div>


            <div class="form-group">
                <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" required="" />
            </div>


            <div class="form-group">
                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" required="" />
            </div>

            <div>
                <a class="submit" href="javascript:{}" onclick="document.getElementById('register').submit(); return false;">Submit</a>
            </div>

            <div class="clearfix"></div>

            <div class="separator">
                <p class="change_link">
                    Already a member ?
                    <a asp-page="/Account/Login" class=""> Log in </a>
                </p>

                <div class="clearfix"></div>
                <br />


            </div>
        </form>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
